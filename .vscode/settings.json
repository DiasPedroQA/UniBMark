{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    "python.analysis.typeCheckingMode": "basic",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.venv": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
    },    
    "cSpell.words": [
        "beautifulsoup",
        "celerybeat",
        "cython",
        "descricao",
        "dmypy",
        "dont",
        "dotenv",
        "mkdocs",
        "multiplicacao",
        "mypy",
        "operacao",
        "pypackages",
        "pypirc",
        "pytype",
        "ropeproject",
        "Spyder",
        "spyderproject",
        "spyproject",
        "venv"
    ]
}